<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilActivity"
    android:background="@drawable/gradient_bg_1"
    android:id="@+id/drawer"
    >

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/square"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:text=""
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/square"
        android:layout_marginTop="100dp"
        android:text=""
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/square"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:text=""
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginRight="25dp"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Bahasa Inggris"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Pengetahuan Umum"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="25dp"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Bahasa Indonesia"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bigsquare"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:text="Akumulasi Nilai TNI POLRI"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="80dp"
            android:text="NAMA PENGGUNA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        >
        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginRight="50dp"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#fff"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        >
        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginRight="50dp"
            android:text="Benar"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Salah"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginLeft="50dp"
            android:text="Kosong"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawermenu"
        android:clickable="true"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        app:itemTextColor="@color/colorBlack"
        app:itemIconTint="@color/colorBlack">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>