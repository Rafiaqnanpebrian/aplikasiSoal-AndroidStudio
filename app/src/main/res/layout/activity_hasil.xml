<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilActivity"
    android:background="@drawable/gradient_bg_1"
    android:id="@+id/drawer"
    >

<LinearLayout
    android:id="@+id/linearlayout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/square"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:text=""
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/square"
        android:layout_marginTop="100dp"
        android:text=""
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/square"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:text=""
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginRight="25dp"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Bahasa Inggris"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Pengetahuan Umum"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="25dp"
            android:textSize="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Bahasa Indonesia"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bigsquare"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:text="Akumulasi Nilai TNI POLRI"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="80dp"
            android:text="NAMA PENGGUNA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        >
        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginRight="50dp"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#fff"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        >
        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginRight="50dp"
            android:text="Benar"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Salah"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginLeft="50dp"
            android:text="Kosong"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="230dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/exit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_down_black">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_exit"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="EXIT"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/repeat_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_down_black">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_repeat"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="REPEAT"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_down_black">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_share"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="SHARE"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>